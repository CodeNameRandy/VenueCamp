
<% include ../partials/header %>

 



    <header class="jumbotron">
        <div class="container">
        <h1>Welcome to RANDY'S WEBSITE!!!</h1>
        <p>View our hand-picked venues from all over the world</p>
        <p>
            <a class="btn btn-primary btn-lrg" href="/campgrounds/new">Add New Venues!</a>
        </p>
        </div>
    </header>

    <div class="row">
        <div class="col-lg-12">
            <h3>Our most popular venues</h3>
        </div>
    </div>
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campground){ %>
        
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                     <img src="<%= campground.image %>" style="width: 400px; height: 201px">
                     <div class="caption">
                         <h4><%=campground.name %></h4>
                     </div>
                     <p>
                         <a href="/campgrounds/<%= campground._id %>" class ="btn btn-primary">More Info</a>
                     </p>
                </div>
            </div>
                
            
            
        <% }); %>
    </div>    
        

<% include ../partials/footer %>