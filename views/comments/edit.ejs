<% include ../partials/header %>


    <div class="row">
        <!--Change h1 to add campground name-->
        <h1 style="text-align: center;">Edit Comment</h1>
        <div style="width: 30%; margin: 30px auto;">
            <!--change URL to include campground id-->
                <!--1. Change form action
                    2. Change Method = put so add ? syntax
                    3. Change campground_.id to campground_id - we do not have campground defined and do not need to use all the campground info
                        use the new syntax and it is defined in the edit route-->
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                                                    <!--This type of name syntax makes the post route much easier-->
                                                    <!--3. change "placeholder" to "value" syntax-->
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                </div>
           
                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-default btn-block">Submit!</button>
                </div>
                
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
        
        
        
    </div>
   



