<% include ../partials/header %>


    <div class="row">
        <!--Change h1 to add campground name-->
        <h1 style="text-align: center;">Add New Comment to <%= campground.name %></h1>
        <div style="width: 30%; margin: 30px auto;">
            <!--change URL to include campground id-->
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                                                    <!--This type of name syntax makes the post route much easier-->
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
           
                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-default btn-block">Submit!</button>
                </div>
                
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
        
        
        
    </div>
   


<% include ../partials/footer %>